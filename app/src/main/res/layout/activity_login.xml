<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage"
    android:gravity="center|top"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="60sp"
        android:src="@drawable/fq_logo"
        android:tint="@color/colorFQ"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login ID:"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/loginError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ErrorTextColor"
        android:text=""
        android:layout_marginTop="5sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"/>
    <EditText
        android:autofillHints="@string/pwHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/storeID"
        android:maxLines="1"
        android:maxLength="10"
        android:hint="@string/pwHint"
        android:textColor="@color/TextColor"
        android:textColorHighlight="@color/colorFQ"
        android:inputType="number"
        android:imeOptions="actionDone"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="10sp"
        />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"/>





</LinearLayout>

